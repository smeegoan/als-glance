@using ALS.Glance.Web.Resources
@model ALS.Glance.Web.Models.PatientsViewModel

@{
    ViewBag.Title = Resources.SharedPatients;
}

<h2>@ViewBag.Title</h2>
<div class="container-fluid">
    <div class="row">
        <div style="height: 200px; position: relative;">
            <div id="aucBubbleChart" class="dc-chart" data-step="1" data-intro="@Resources.PatientsTip1" data-position='bottom'>
                <div class="loading">@Resources.PatientLoading</div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <table class="table" id="patients">
            <thead>
                <tr>
                    <th>
                        @Resources.PatientsPatientId
                    </th>
                    <th>
                        @Resources.PatientsBornOn
                    </th>
                    <th>
                        @Resources.PatientsDiagnosedOn
                    </th>
                    <th>
                        @Resources.PatientsName
                    </th>
                    <th>
                        @Resources.PatientsSex
                    </th>
                    <th>@Resources.PatientResume</th>
                </tr>
            </thead>           
        </table>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Home/ApiAuth")
    @Scripts.Render("~/bundles/datatablejs")
    @Scripts.Render("~/bundles/commonjs")

    <script>
    $(function () {
        var then = moment();
        var apiClient = new alsglance.ApiClient({
            baseUri: alsglance.baseUri,
            authToken: alsglance.authToken,
            onAuthFail: function () {
                toastr.error("Error authenticating!", 'ALS Glance');
            }
        });
        alsglance.resources = alsglance.resources || {
            loadingMessage: '@Resources.PatientLoading',
            patientsXAxisLabel: '@Html.Raw(Resources.PatientsXAxisLabel)',
            patientsYAxisLabel: '@Html.Raw(Resources.PatientsYAxisLabel)',
            help: '@Resources.Help',
            patientsTip2:'@Resources.PatientsTip2',
            patientsTip3:'@Resources.PatientsTip3',
        };
        $.when(apiClient.get("DPatient?$select=Id,PatientId,BornOn,DiagnosedOn,Name,Sex"))
                .then(function (data) {
                    alsglance.dashboard.patients.load(data,@Model.AgeMin,@Model.AgeMax);
                    alsglance.dashboard.patients.dataTable= $('#patients').dataTable({
                        "order": [[3, "asc"]],
                        "aaData": alsglance.dashboard.patients.sexDimension.top(Infinity),
                        "dom": '<"top"f<"clear">>rt<"col-sm-offset-4"p>',
                        "bLengthChange": false,
                        "bSort": true,
                        "bInfo": false,
                        "bAutoWidth": false,
                        "bDeferRender": true,
                        "bDestroy": true,
                        "aoColumns": [
                            { "mData": "PatientId", "sDefaultContent": "" },
                            { "mData": "BornOn", "sDefaultContent": "" },
                            { "mData": "DiagnosedOn", "sDefaultContent": "" },
                            { "mData": "Name", "sDefaultContent": "" },
                            { "mData": "Sex", "sDefaultContent": "" },
                            { "mData": "Resume", "sDefaultContent": ""}
                        ]
                    });
                    alsglance.charts.setBehaviour();
                    alsglance.presentation.showPatientsHelpButton();
                    analytics.logActionLoad(then,"Patients");
                });

    });
    </script>
}
